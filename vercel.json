{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "^/static/(.*)",
      "dest": "/frontend/build/static/$1"
    },
    {
      "src": "^/_next/static/(.*)",
      "dest": "/frontend/build/_next/static/$1"
    },
    {
      "src": "^/(.*)",
      "dest": "/frontend/build/index.html"
    }
  ]
}
